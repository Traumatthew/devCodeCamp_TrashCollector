@model TrashCollector.Models.CustomerAndAccountViewModel

@{
    ViewBag.Title = "CustomerAccounts";
}
@using (Html.BeginForm())
{
    <h2>CustomerAccounts</h2>

    <div class="container">
        <div class="row">
            <div class="col-md-6 table-responsive">
                <table class="table table-hover col-md-6">
                    <thead class="thead-light">
                        <tr>
                            <th>
                                @Html.DisplayName("First Name")
                            </th>
                            <th>
                                @Html.DisplayName("Last Name")
                            </th>
                            <th>
                                @Html.DisplayName("Email")
                            </th>
                            <th>
                                @Html.DisplayName("Phone")
                            </th>
                            <th>
                                @Html.DisplayName("Street")
                            </th>
                            <th>
                                @Html.DisplayName("City")
                            </th>
                            <th>
                                @Html.DisplayName("State")
                            </th>
                            <th>
                                @Html.DisplayName("Zip")
                            </th>

                            <th></th>
                        </tr>
                    </thead>

                    @foreach (var item in Model.customers)
                    {

                        
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.FirstName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.LastName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Email)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Phone)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Street)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.City)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.State)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Zip)
                            </td>

                        </tr>
                    }
                </table>
                <hr />
                <label>
                    Filter Results
                </label>
                <div class="form-group">
                    <div class="col-md-6">
                        <form action="/Employees/CustomerAccounts" method="post">
                            <table class="table table-hover col-md-6">
                                <thead class="thead-light">
                                    <tr>
                                        <th scope="col">Monday</th>
                                        <th scope="col">Tuesday</th>
                                        <th scope="col">Wednesday</th>
                                        <th scope="col">Thursday</th>
                                        <th scope="col">Friday</th>
                                        <th scope="col">Saturday</th>
                                        <th scope="col">Sunday</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>
                                            <div class="form-check">
                                                <input type="checkbox" name="days" value="Monday" />
                                            </div>
                                        </td>
                                        <td>
                                            <div class="form-check">
                                                <input type="checkbox" name="days" value="Tuesday" />
                                            </div>
                                        </td>
                                        <td>
                                            <div class="form-check">
                                                <input type="checkbox" name="days" value="Wednesday" />
                                            </div>
                                        </td>
                                        <td>
                                            <div class="form-check">
                                                <input type="checkbox" name="days" value="Thursday" />
                                            </div>
                                        </td>
                                        <td>
                                            <div class="form-check">
                                                <input type="checkbox" name="days" value="Friday" />
                                            </div>
                                        </td>
                                        <td>
                                            <div class="form-check">
                                                <input type="checkbox" name="days" value="Saturday" />
                                            </div>
                                        </td>
                                        <td>
                                            <div class="form-check">
                                                <input type="checkbox" name="days" value="Sunday" />
                                            </div>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                            <br>
                            <input type="submit" name="submit" value="Filter" /><br>
                        </form>

                    </div>
                </div>
            </div>
            <div class="col-md-6">
                
                <style>
                                 /* Always set the map height explicitly to define the size of the div
                    * element that contains the map. */
                                 #map {
                                     height: 100%;
                                 }
                                 /* Optional: Makes the sample page fill the window. */
                                 html, body {
                                     height: 100%;
                                     margin: 0;
                                     padding: 0;
                                 }
                </style>
                    <div id="map"></div>
                    <script>
                      var map;
                        function initMap() {
                            // The location of Uluru
                           
                            var uluru = { lat: 39.4831, lng: -88.3728 };
                            // The map, centered at Uluru
                            var map = new google.maps.Map(
                                document.getElementById('map'), { zoom: 13, center: uluru });
                            // The marker, positioned at Uluru
                            var marker = new google.maps.Marker({ position: uluru, map: map });
                        }
                    </script>
                    <script src=@Model.srcKey
                            async defer></script>
            </div>
        </div>

    </div>
        }

